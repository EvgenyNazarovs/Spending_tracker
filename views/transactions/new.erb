<h1>Add a New Transaction</h1>

<form action="/transactions/add" method="POST"

<p><input type="number" placeholder="Enter Amount" name="amount" required></p>

<p><input type="date" name="a_date" required></p>

<p><label>Pick a merchant:</label>
  <select name="merchant_id"
    <% for merchant in @merchants %>
      <option value="<%= merchant.id %>">
        <%= merchant.name %></option>
      <%end%>
    </select>
</p>

<p><label>Tag one:</label>
  <input type="text" list="tags" name ="tags[type1]">
<datalist id="tags">
  <% for tag in @tags %>
  <option value="<%=tag.type%>"><%=tag.type%></option>
  <% end %>
  </datalist>

  <p><label>Tag Two:</label>
    <input type="text" list="tags" name ="tags[type2]">
  <datalist id="tags">
    <% for tag in @tags %>
    <option value="<%=tag.type%>"><%=tag.type%></option>
    <% end %>
    </datalist>


<input type="submit" values="Add Transaction">
</form>
